<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/feed_bg"
    >


        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:padding="10dp"
           >

            <ImageButton
                android:layout_centerInParent="true"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/left"
                android:background="@color/feed_bg"
                android:onClick="goToFeed"
                android:id="@+id/toFeed"

                />
            </RelativeLayout>
        <RelativeLayout

            android:layout_width="130dp"
            android:layout_height="160dp"

            android:background="@drawable/bg_parent"
            android:id="@+id/relativeLayout2"
            android:layout_centerVertical="true"
            android:layout_margin="50dp">

            <ImageView
                android:id="@+id/warnP"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/warn"

                android:padding="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Warn"

                android:textColor="#22313f"
                android:layout_below="@+id/warnP"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="130dp"
            android:layout_height="160dp"
            android:background="@drawable/bg_parent"

            android:id="@+id/relativeLayout3"
            android:layout_alignTop="@+id/relativeLayout2"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/restP"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/rest"

                android:padding="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Rest"

                android:textColor="#22313f"
                android:layout_below="@id/restP"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>




        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="160dp"


            android:background="@drawable/bg_parent"

            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="50dp">

            <ImageView
                android:id="@+id/eatP"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/eat"
                android:padding="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Eat"

                android:textColor="#22313f"
                android:layout_below="@id/eatP"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>




</RelativeLayout>